@namespace IonBlazor.Components
@inherits IonComponent

<ion-toast @ref="_self"
           @attributes="@Attributes"
           class="@Class"
           animated="@Animated"
           color="@Color"
           duration="@Duration"
           header="@Header"
           icon="@Icon"
           is-open="@IsOpen"
           keyboard-close="@KeyboardClose"
           layout = "@Layout"
           message="@(string.IsNullOrWhiteSpace(Message) ? Message : (MarkupString)Message)"
           mode="@Mode"
           position="@Position"
           position-anchor="@PositionAnchor"
           translucent="@Translucent"
           trigger="@Trigger">
</ion-toast>