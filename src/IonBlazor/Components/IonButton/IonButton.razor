@namespace IonBlazor.Components
@inherits IonContentComponent

<ion-button @ref="@_self"
            @attributes="@Attributes"
            button-type="@ButtonType"
            color="@Color"
            disabled="@Disabled"
            download="@Download"
            expand="@(GetCachedValue(ref _expandCache, Expand))"
            fill="@Fill"
            form="@Form"
            href="@Href"
            mode="@(Mode ?? CascadingMode)"
            rel="@Rel"
            shape="@(GetCachedValue(ref _shapeCache, Shape))"
            size="@Size"
            strong="@Strong"
            target="@Target"
            type="@(GetCachedValue(ref _typeCache, Type))">
    @ChildContent
</ion-button>

@code {
    private string? _expandCache;
    private string? _shapeCache;
    private string? _typeCache;

    private static string? GetCachedValue(ref string? cache, string? value)
        => cache ??= value?.ToLowerInvariant();
}