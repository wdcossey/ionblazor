           class="@Class"
           animated="@Animated"
           backdrop-breakpoint="@BackdropBreakpoint"
           backdrop-dismiss="@BackdropDismiss"
           handle="@Handle"
           handle-behavior="@HandleBehavior"
           breakpoints="@Breakpoints"
