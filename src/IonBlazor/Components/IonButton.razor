@inherits IonComponent

<ion-button @ref="@_self"
            @attributes="@Attributes"
            button-type="@ButtonType"
            class="@Class"
            color="@Color"
            disabled="@Disabled"
            download="@Download"
            expand="@Expand?.ToString().ToLowerInvariant()"
            fill="@Fill"
            form="@Form"
            href="@Href"
            mode="@(Mode ?? CascadingMode)"
            rel="@Rel"
            shape="@Shape?.ToLowerInvariant()"
            size="@Size"
            strong="@Strong"
            target="@Target"
            type="@Type?.ToLowerInvariant()">
    @ChildContent
</ion-button>