@inherits IonControl

<ion-button @ref="@_self"
            @attributes="@Attributes"
            button-type="@ButtonType"
            class="@Class"
            color="@Color"
            disabled="@Disabled"
            download="@Download"
            expand="@Expand?.ToString().ToLowerInvariant()"
            fill="@Fill"
            form="@Form"
            href="@Href"
            mode="@Mode"
            rel="@Rel"
            shape="@Shape?.ToString().ToLowerInvariant()"
            size="@Size?.ToString().ToLowerInvariant()"
            strong="@Strong"
            target="@Target"
            type="@Type?.ToLowerInvariant()"
            @onclick="@OnClick">
    @ChildContent
</ion-button>