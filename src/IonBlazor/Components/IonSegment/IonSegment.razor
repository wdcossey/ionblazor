@namespace IonBlazor.Components
@inherits IonContentComponent

<ion-segment @ref="@_self"
             @attributes="@Attributes"
             class="@Class"
             color="@Color"
             disabled="@Disabled"
             mode="@Mode"
             scrollable="@Scrollable"
             select-on-focus="@SelectOnFocus"
             swipe-gesture="@SwipeGesture"
             value="@Value">
    <CascadingValue TValue="@IIonComponent" Name="@(nameof(IonSegmentButton.Parent))" Value="@(this)" IsFixed="@true">
        @ChildContent
    </CascadingValue>
</ion-segment>