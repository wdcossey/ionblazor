@namespace IonBlazor.Components
@inherits IonComponent

<ion-searchbar @ref="IonElement"
               @attributes="@Attributes"
               animated="@Animated.AsString()"
               autocomplete="@(AutoComplete ?? SearchbarAutoComplete.Off)"
               autocorrect="@(AutoCorrect.AsString(BooleanExtensions.On, BooleanExtensions.Off))"
               cancel-button-icon="@CancelButtonIcon"
               cancel-button-text="@CancelButtonText"
               clear-icon="@ClearIcon"
               color="@Color"
               debounce="@Debounce?.ToString()"
               disabled="@Disabled.AsString()"
               enterkeyhint="@EnterKeyHint"
               inputmode="@InputMode"
               mode="@Mode"
               placeholder="@((MarkupString)(Placeholder ?? string.Empty))"
               search-icon="@SearchIcon"
               show-cancel-button="@ShowCancelButton"
               show-clear-button="@ShowClearButton"
               spellcheck="@SpellCheck.AsString()"
               type="@Type"
               value="@Value">
</ion-searchbar>