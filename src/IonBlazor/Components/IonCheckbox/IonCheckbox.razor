@namespace IonBlazor.Components
@inherits IonContentComponent

<ion-checkbox @ref="IonElement"
              @attributes="@Attributes"
              checked="@Checked.AsString()"
              color="@Color"
              disabled="@Disabled.AsString()"
              indeterminate="@Indeterminate.AsString()"
              justify="@Justify"
              label-placement="@LabelPlacement"
              mode="@Mode"
              name="@Name"
              value="@Value">
    @ChildContent
</ion-checkbox>