<IonButton id="present-alert-text-inputs-example">Click Me</IonButton>
<IonAlert Trigger="present-alert-text-inputs-example"
          Header="Please enter your info"
          IonAlertDidDismiss="IonAlertDidDismiss"
          ButtonsBuilder="@ButtonsBuilder"
          InputsBuilder="@InputsBuilder"
          />
@code{

    [CascadingParameter(Name = nameof(Console))]
    private PlaygroundConsole? Console { get; init; }

    private void IonAlertDidDismiss(IonAlertDismissEventArgs args)
    {
        var values = string.Join(",", (args.Values as AlertValuesDictionary)?.Values?.Select(s => $"{{\"{s.Key}\":\"{s.Value}\"}}") ?? []);
        Console?.Add($"Dismissed with role: {args.Role}");
        Console?.Add($"{{{values}}}");
    }

    private static void ButtonsBuilder(AlertButtonBuilder builder)
    {
        builder.Add(new AlertButton { Text = "OK", Role = "confirm" });
    }

    private static void InputsBuilder(AlertInputBuilder builder)
    {
        builder
            .Add(new AlertInput { Placeholder = "Name", Name = "name" })
            .Add(new AlertInput { Placeholder = "Nickname (max 8 characters)", Attributes = new Dictionary<string, object>() { { "maxlength", 8 } }, Name = "nickname" })
            .Add(new AlertInputNumber { Placeholder = "Age", Min = "1", Max = "100", Name = "age" })
            .Add(new AlertInputTextArea { Placeholder = "A little about yourself", Name = "info" });

    }

}