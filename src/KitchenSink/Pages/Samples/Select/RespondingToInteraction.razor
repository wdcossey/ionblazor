<IonList>
    <IonItem>
        <IonSelect TValue="@string"
                   aria-label="Fruit"
                   Placeholder="Select fruit"
                   IonChange="OnIonChange"
                   IonCancel="OnIonCancel"
                   IonDismiss="OnIonDismiss">
            <IonSelectOption Value="apples">Apples</IonSelectOption>
            <IonSelectOption Value="oranges">Oranges</IonSelectOption>
            <IonSelectOption Value="bananas">Bananas</IonSelectOption>
        </IonSelect>
    </IonItem>
</IonList>

@code {
    [CascadingParameter(Name = nameof(Console))]
    private PlaygroundConsole? Console { get; init; }

    private void OnIonChange(IonSelectChangeEventArgs<string> args)
    {
        Console?.Add($"ionChange fired with value: {args.Value}");
    }

    private void OnIonCancel()
    {
        Console?.Add("ionCancel fired");
    }

    private void OnIonDismiss()
    {
        Console?.Add("ionDismiss fired");
    }

}