<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <EnableDefaultCssItems>false</EnableDefaultCssItems>
        <Nullable>enable</Nullable>
        <WindowsPackageType>None</WindowsPackageType>
        <LangVersion>13</LangVersion>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <PackageId>IonBlazor</PackageId>
        <Description>Ionic components for Blazor / ASP.NET Core Razor</Description>
        <PackageProjectUrl>https://github.com/wdcossey/ionblazor</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageVersion>0.843.0-alpha.4</PackageVersion>
        <Authors>wdcossey</Authors>
        <RepositoryUrl>https://github.com/wdcossey/ionblazor</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>blazor, ionic, webcomponents, razor, aspnetcore</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>logo-ionic.png</PackageIcon>
        <RootNamespace>IonBlazor</RootNamespace>
        <RazorClassLibrary>true</RazorClassLibrary>
        <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
        <StaticWebAssetBasePath>_content/IonBlazor</StaticWebAssetBasePath>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
      <PackageReference Include="Microsoft.AspNetCore.Components" Version="[6.0.0,7.0.0)" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="[6.0.0,7.0.0)" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
      <PackageReference Include="Microsoft.AspNetCore.Components" Version="[7.0.0,8.0.0)" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="[7.0.0,8.0.0)" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
      <PackageReference Include="Microsoft.AspNetCore.Components" Version="[8.0.0,9.0.0)" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="[8.0.0,9.0.0)" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
      <PackageReference Include="Microsoft.AspNetCore.Components" Version="[9.0.0,)" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="[9.0.0,)" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\docs\README.md" Pack="true" PackagePath="\"/>
        <None Include="..\..\assets\logo-ionic.png" Pack="true" Visible="false" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
      <Remove Remove="..\..\node_modules\@ionic\core\dist\ionic\**\*.*" />
      <Content Include="..\..\node_modules\@ionic\core\dist\ionic\**\*.*">
          <Link>wwwroot\@ionic\core\dist\ionic\%(RecursiveDir)%(Filename)%(Extension)</Link>
          <Pack>true</Pack>
          <PackagePath>wwwroot\</PackagePath>
          <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </Content>

      <Remove Remove="..\..\node_modules\@ionic\core\css\**\*.*" />
      <Content Include="..\..\node_modules\@ionic\core\css\*.css">
          <Link>wwwroot\@ionic\core\css\%(RecursiveDir)%(Filename)%(Extension)</Link>
          <Pack>true</Pack>
          <PackagePath>wwwroot\</PackagePath>
          <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </Content>

      <Content Include="..\..\node_modules\@ionic\core\css\palettes\*.css">
          <Link>wwwroot\@ionic\core\css\palettes\%(RecursiveDir)%(Filename)%(Extension)</Link>
          <Pack>true</Pack>
          <PackagePath>wwwroot\</PackagePath>
          <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\IonBlazor.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="IonBlazor.UnitTests" />
    </ItemGroup>

</Project>