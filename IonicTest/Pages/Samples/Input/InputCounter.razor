<IonInput Label="Default counter"
          LabelPlacement="@IonInputLabelPlacement.Floating"
          Counter="true"
          Maxlength="20">
</IonInput>

<IonInput id="custom-input"
          Label="Custom Counter Format"
          LabelPlacement="@IonInputLabelPlacement.Floating"
          Counter="@true"
          CounterFormat="`${maxLength - inputLength} characters remaining`"
          Maxlength="20">
</IonInput>

@*<script>
  const customInput = document.querySelector('#custom-input');
  customInput.counterFormatter = (inputLength, maxLength) => `${maxLength - inputLength} characters remaining`;
</script>*@