<ion-button buttonType="@ButtonType" 
            color="@Color" 
            disabled="@Disabled"
            download="@Download"
            expand="@Expand?.ToString().ToLowerInvariant()"
            fill="@Fill?.ToString().ToLowerInvariant()"
            form="@Form"
            href="@Href"
            mode="@Mode?.ToString().ToLowerInvariant()"
            rel="@Rel"
            shape="@Shape?.ToString().ToLowerInvariant()"
            size="@Size?.ToString().ToLowerInvariant()"
            strong="@Strong"
            target="@Target"
            type="@Type.ToString().ToLowerInvariant()"
            @onclick="@OnClick">@ChildContent</ion-button>