  <IonItem>
    <IonInput
      Label="Input with clear button"
      LabelPlacement="@IonInputLabelPlacement.Stacked"
      ClearInput="@true"
      Placeholder="Enter text to see clear button"
      Value="Default value"
    >
    </IonInput>
  </IonItem>

  <IonItem>
    <IonInput
      Label="Input with clear on edit"
      LabelPlacement="@IonInputLabelPlacement.Stacked"
