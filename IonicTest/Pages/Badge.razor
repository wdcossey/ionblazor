@page "/badge"

<div class="ion-page" id="main-content">
    <IonContent Class="container">
        <h2>Basic Usage</h2>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <ion-list>
                        <ion-item>
                            <IonBadge Slot="start">11</IonBadge>
                            <ion-label>Badge in start slot</ion-label>
                        </ion-item>
                        <ion-item>
                            <IonBadge Slot="end">22</IonBadge>
                            <ion-label>Badge in end slot</ion-label>
                        </ion-item>
                    </ion-list>
                </div>
            </div>
        </div>
        
        <h2>Theming</h2>
        <h3>Colors</h3>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <ion-list>
                        <ion-item>
                            <ion-label>Followers</ion-label>
                            <IonBadge Color="@IonicColor.Primary">22k</IonBadge>
                        </ion-item>
                        <ion-item>
                            <ion-label>Likes</ion-label>
                            <IonBadge Color="@IonicColor.Secondary">118k</IonBadge>
                        </ion-item>
                        <ion-item>
                            <ion-label>Stars</ion-label>
                            <IonBadge Color="@IonicColor.Tertiary">34k</IonBadge>
                        </ion-item>
                        <ion-item>
                            <ion-label>Completed</ion-label>
                            <IonBadge Color="@IonicColor.Success">80</IonBadge>
                        </ion-item>
                        <ion-item>
                            <ion-label>Warnings</ion-label>
                            <IonBadge Color="@IonicColor.Warning">70</IonBadge>
                        </ion-item>
                        <ion-item>
                            <ion-label>Notifications</ion-label>
                            <IonBadge Color="@IonicColor.Danger">1000</IonBadge>
                        </ion-item>
                    </ion-list>
                </div>
            </div>
        </div>
        
        <h3>CSS Properties</h3>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <CustomBadge/>
                </div>
            </div>
        </div>
        

    </IonContent>
</div>