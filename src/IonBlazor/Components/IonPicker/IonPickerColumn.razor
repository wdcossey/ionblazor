@namespace IonBlazor.Components
@inherits IonContentComponent


<ion-picker-column
    @ref="IonElement"
    color="@Color"
    disabled="@Disabled.AsString()"
    mode="@Mode"
    value="@Value">
    <CascadingValue TValue="@IIonComponent" Name="@nameof(Parent)" Value="@(this)" IsFixed="@true">
        @ChildContent
    </CascadingValue>
</ion-picker-column>