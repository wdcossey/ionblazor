@namespace IonBlazor.Components
@inherits IonContentComponent

<ion-toggle @ref="IonElement"
            @attributes="@Attributes"
            checked="@Checked.AsString()"
            color="@Color"
            disabled="@Disabled.AsString()"
            enable-on-off-labels="@EnableOnOffLabels.AsString()"
            justify="@Justify"
            label-placement="@LabelPlacement"
            mode="@Mode"
            name="@Name"
            value="@Value">
    @ChildContent
</ion-toggle>