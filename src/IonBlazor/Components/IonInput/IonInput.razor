@namespace IonBlazor.Components
@inherits IonContentComponent

<ion-input @ref="@IonElement"
           @attributes="@Attributes"
           autocapitalize="@Autocapitalize"
           autocomplete="@Autocomplete"
           autocorrect="@Autocorrect"
           autofocus="@Autofocus.AsString()"
           clear-input="@ClearInput.AsString()"
           clear-on-edit="@ClearOnEdit.AsString()"
           color="@Color"
           counter="@Counter.AsString()"
           debounce="@Debounce?.ToString()"
           disabled="@Disabled.AsString()"
           enterkeyhint="@Enterkeyhint"
           error-text="@ErrorText"
           fill="@Fill"
           helper-text="@HelperText"
           inputmode="@InputMode"
           label="@Label"
           label-placement="@LabelPlacement"
           max="@Max?.ToString()"
           maxlength="@Maxlength?.ToString()"
           min="@Min?.ToString()"
           minlength="@Minlength?.ToString()"
           mode="@Mode"
           multiple="@Multiple.AsString()"
           name="@Name"
           pattern="@Pattern"
           placeholder="@Placeholder"
           readonly="@Readonly.AsString()"
           required="@Required.AsString()"
           shape="@Shape"
           spellcheck="@Spellcheck.AsString()"
           step="@Step"
           type="@Type"
           value="@Value">
    @ChildContent
</ion-input>