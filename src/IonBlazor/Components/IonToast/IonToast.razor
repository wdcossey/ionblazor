@namespace IonBlazor.Components
@inherits IonComponent

<ion-toast @ref="IonElement"
           @attributes="@Attributes"
           animated="@Animated.AsString()"
           color="@Color"
           duration="@Duration?.ToString()"
           header="@Header"
           icon="@Icon"
           is-open="@IsOpen.AsString()"
           keyboard-close="@KeyboardClose.AsString()"
           layout = "@Layout"
           message="@(Message is null ? null : (MarkupString)Message)"
           mode="@Mode"
           position="@Position"
           position-anchor="@PositionAnchor"
           translucent="@Translucent.AsString()"
           trigger="@Trigger">
</ion-toast>