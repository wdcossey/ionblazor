@page "/chip"

<div class="ion-page" id="main-content">
    <IonContent Class="container">
        <h2>Basic Usage</h2>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <IonChip>Default</IonChip>
                    <IonChip Disabled="true">Disabled</IonChip>
                    <IonChip Outline="true">Outline</IonChip>
                </div>
            </div>
        </div>
        
        <h2>Slotting Components and Icons</h2>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <IonChip>
                      <IonAvatar>
                        <img alt="Silhouette of a person's head" src="https://ionicframework.com/docs/img/demos/avatar.svg" />
                      </IonAvatar>
                      <ion-label>Avatar Chip</ion-label>
                      <IonIcon Name="close-circle"></IonIcon>
                    </IonChip>
                    
                    <IonChip>
                      <IonIcon Name="pin" Color="@IonColor.Primary"></IonIcon>
                      <ion-label>Icon Chip</ion-label>
                      <IonIcon Name="close"></IonIcon>
                    </IonChip>
                </div>
            </div>
        </div>
        
        <h2>Theming</h2>
        <h3>Colors</h3>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <IonChip>Default</IonChip>
                    <IonChip Color="@IonColor.Primary">Primary</IonChip>
                    <IonChip Color="@IonColor.Secondary">Secondary</IonChip>
                    <IonChip Color="@IonColor.Tertiary">Tertiary</IonChip>
                    <IonChip Color="@IonColor.Success">Success</IonChip>
                    <IonChip Color="@IonColor.Warning">Warning</IonChip>
                    <IonChip Color="@IonColor.Danger">Danger</IonChip>
                    <IonChip Color="@IonColor.Light">Light</IonChip>
                    <IonChip Color="@IonColor.Medium">Medium</IonChip>
                    <IonChip Color="@IonColor.Dark">Dark</IonChip>
                </div>
            </div>
        </div>
        
        <h3>CSS Custom Properties</h3>
        <div class="playground__container">
            <div class="playground__preview">
                <div class="playground__frame">
                    <CustomChip/>
                </div>
            </div>
        </div>
        

    </IonContent>
</div>
