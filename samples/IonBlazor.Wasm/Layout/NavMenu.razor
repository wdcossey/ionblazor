@inject NavigationManager NavigationManager

<IonMenu ContentId="main-content">
    <IonHeader>
        <IonToolbar Color="@IonColor.Primary">
            <IonTitle>IonBlazor.Wasm</IonTitle>
        </IonToolbar>
    </IonHeader>
    <IonContent class="ion-padding">
        <style>
            ion-menu[content-id="main-content"] ion-content::part(background) {
                background: var(--ion-item-background, var(--ion-background-color, #fff));;
            }
        </style>
        <IonList>
            <IonItem Button="@true" @onclick="@(() => NavigationManager.NavigateTo("/"))">
                <IonIcon aria-hidden="true" Name="home-outline" slot="start"></IonIcon>
                <IonLabel>Home</IonLabel>
            </IonItem>

            <IonItem Button="@true" @onclick="@(() => NavigationManager.NavigateTo("/counter"))">
                <IonIcon aria-hidden="true" Name="add-outline" slot="start"></IonIcon>
                <IonLabel>Counter</IonLabel>
            </IonItem>

            <IonItem Button="@true" @onclick="@(() => NavigationManager.NavigateTo("/weather"))">
                <IonIcon aria-hidden="true" Name="sunny-outline" slot="start"></IonIcon>
                <IonLabel>Weather</IonLabel>
            </IonItem>
        </IonList>
    </IonContent>
</IonMenu>


